STYLE="default"

rofi \
	-dpi 150 \
	-show calc \
	-modi calc \
	-no-show-match \
	-no-sort \
	-no-persist-history \
	-theme "$HOME"/.config/openbox/rofi/"$STYLE"/calc.rasi
